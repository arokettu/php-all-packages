{
    "name": "sandfox.dev/all-packages",
    "description": "All my libraries metapackage",
    "type": "metapackage",
    "license": "0BSD",
    "authors": [
        {
            "name": "Anton Smirnov",
            "email": "sandfox@sandfox.me"
        }
