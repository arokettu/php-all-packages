        "peso/currencyapi-service": "*",
        "peso/ecb-service": "*",
        "peso/fixer-service": "*",
        "peso/freecurrencyapi-service": "*",
        "peso/moneyphp-exchange": "*",
        "peso/openexchangerates-service": "*",
        "peso/peso": "*",
        "peso/peso-exchanger-interop": "*"
