        "arokettu/datetime-rounding": "*",
        "arokettu/encryptor": "*",
        "arokettu/ip-address": "*",
        "arokettu/ip-address-doctrine": "*",
        "arokettu/is-resource": "*",
        "arokettu/json": "*",
        "arokettu/json5-builder": "*",
        "arokettu/kilo-mega": "*",
        "arokettu/monsterid": "*",
        "arokettu/path": "*",
